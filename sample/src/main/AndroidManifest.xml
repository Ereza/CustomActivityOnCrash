<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cat.ereza.example.customactivityoncrash">
    <uses-permission android:name="android.permission.INTERNET">
    </uses-permission>
    <application
        android:name="cat.ereza.customactivityoncrash.sample.SampleCrashableApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="cat.ereza.customactivityoncrash.sample.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="cat.ereza.customactivityoncrash.sample.ErrorActivity"
            android:process=":error_report"/>
    </application>

</manifest>
